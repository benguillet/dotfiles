[user]
	name = Benjamin Guillet
	email = benjamin.guillet@gmail.com
[color]
  ui = true
[format]
	pretty = "Commit:  %C(blue)%H%nAuthor:  %C(green)%aN <%aE>%nDate:    (%C(red)%ar%Creset) %ai%nSubject: %s%n%n%b"
[alias]
	co = checkout
  g = grep --break --heading --line-number
  cp = cherry-pick
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
  yesterday = !git log --graph --all --since=\"yesterday.midnight\" --until=\"midnight\" --author=\"$(git config user.email)\" --oneline
  today = !git log --graph --all --since=midnight --author=\"$(git config user.email)\" --oneline

  ; Delete all local branches that have been merged into the current branch, except master
	cleanup = !sh -c 'git branch --merged | grep -v "master$" | grep -v "^*" | xargs git branch -d'
  ; Show all local branches sorted by last commit date
  branches = for-each-ref --sort=-committerdate refs/heads/
[core]
	editor = vim
	excludesfile = ~/.gitignore
[code]
	editor = vim
[credential]
	helper = osxkeychain
[push]
	default = simple
[heroku]
	account = work
[merge]
	ff = only
